{
    "type": "object",
    "properties": {
      "coupling-scheme": {
        "type": "object",
        "properties": {
          "max-time": {
            "oneOf": [
              {"type": "integer"},
              {
                "type": "string",
                "pattern": "^-?([0-9]+\\.?[0-9]*|\\.?[0-9]+)([eE][-+]?[0-9]+)?$"
              }
            ]
          },
          "time-window-size": {
            "oneOf": [
              {"type": "number"},
              {
                "type": "string",
                "pattern": "^-?([0-9]+\\.?[0-9]*|\\.?[0-9]+)([eE][-+]?[0-9]+)?$"
              }
            ],
            "default": -1
          },
          "max-iterations": {
            "type": "integer"
          },
          "display_standard_values": {
            "type": "boolean",
            "default": false
          },
          "coupling": {
            "type": "string",
            "enum": ["parallel", "serial"],
            "default": "parallel"
          }
        },
        "required": [ ],
        "optional": [ "display_standard_values", "max-time", "time-window-size", "max-iterations", "coupling" ]
      },
      "acceleration": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Type of acceleration method",
            "enum": ["constant", "aitken", "IQN-ILS", "IQN-IMVJ"],
            "default": "IQN-ILS"
          },
          "initial-relaxation": {
            "oneOf": [
              {"type": "number"},
              {
                "type": "string",
                "pattern": "^-?([0-9]+\\.?[0-9]*|\\.?[0-9]+)([eE][-+]?[0-9]+)?$"
              }
            ],
            "description": "Initial under-relaxation factor"
          },
          "preconditioner": {
            "type": "object",
            "description": "Preconditioner configuration",
            "properties": {
              "freeze-after": {
                "type": "integer",
                "description": "Time window after which preconditioner stops updating (-1 = never)",
                "minimum": -1,
                "default": -1
              },
              "type": {
                "type": "string",
                "description": "Type of preconditioner",
                "enum": ["constant", "value", "residual", "residual-sum"]
              }
            },
            "required": [ "freeze-after" ],
            "optional": [ "type" ]
          },
          "filter": {
            "type": "object",
            "description": "QR1/2 filter configuration",
            "properties": {
              "limit": {
                "oneOf": [
                  {"type": "number"},
                  {
                    "type": "string",
                    "pattern": "^-?([0-9]+\\.?[0-9]*|\\.?[0-9]+)([eE][-+]?[0-9]+)?$"
                  }
                ],
                "description": "Threshold for filtering singular values",
                "exclusiveMinimum": 0,
                "default": 1e-16
              },
              "type": {
                "type": "string",
                "description": "Type of filtering",
                "enum": ["QR1", "QR2"]
              }
            },
            "required": [ "limit" ],
            "optional": [ "type" ]
          },
          "max-used-iterations": {
            "type": "integer",
            "description": "Maximum number of previous iterations used for IQN methods",
            "minimum": 0
          },
          "time-windows-reused": {
            "type": "integer",
            "description": "Number of past time windows reused for IQN methods",
            "minimum": 0
          },
          "imvj-restart-mode": {
            "type": "object",
            "description": "Configuration for IMVJ restart mode",
            "properties": {
              "truncation-threshold": {
                "oneOf": [
                  {"type": "number"},
                  {
                    "type": "string",
                    "pattern": "^-?([0-9]+\\.?[0-9]*|\\.?[0-9]+)([eE][-+]?[0-9]+)?$"
                  }
                ],
                "description": "Threshold for truncating singular values during restart",
                "exclusiveMinimum": 0,
                "default": 0.0001
              },
              "chunk-size": {
                "type": "integer",
                "description": "Number of time windows between restarts",
                "minimum": 1,
                "default": 8
              },
              "reused-time-windows-at-restart": {
                "type": "integer",
                "description": "Number of time windows reused after restart",
                "minimum": 0,
                "default": 8
              },
              "type": {
                "type": "string",
                "description": "Type of restart mode",
                "enum": ["no-restart", "RS-0", "RS-LS", "RS-SVD", "RS-SLIDE"],
                "default": "RS-SVD"
              }
            },
            "required": [ "truncation-threshold", "chunk-size", "reused-time-windows-at-restart","type" ],
            "optional": [  ]
          },
          "display_standard_values": {
            "type": "boolean",
            "default": false
          }
        },
        "required": [ ],
        "optional": [ "name", "initial-relaxation", "preconditioner", "filter", "max-used-iterations", "time-windows-reused", "display_standard_values", "imvj-restart-mode" ]
      },
      "participants": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "solver": {
              "type": "string"
            },
            "dimensionality": {
              "type": "integer",
              "default": 3
            }
          },
          "required": ["name", "solver"]
        },
        "minItems": 1
      },
      "exchanges": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "from": {
              "type": "string"
            },
            "from-patch": {
              "type": "string"
            },
            "to": {
              "type": "string"
            },
            "to-patch": {
              "type": "string"
            },
            "data": {
              "type": "string"
            },
            "data-type": {
              "type": "string",
              "enum": ["scalar", "vector"],
              "default": "scalar"
            },
            "type": {
              "type": "string"
            }
          },
          "required": [
            "from",
            "from-patch",
            "to",
            "to-patch",
            "data",
            "type"
          ],
          "optional": [ "data-type" ]
        }
      }
    },
    "required": [
      "coupling-scheme",
      "participants",
      "exchanges"
    ],
    "optional": [ "acceleration" ],
    "title": "preCICE Topology Configuration",
    "description": "JSON schema defining the topology configuration for preCICE-generated cases. Specifies participants, exchanges, and their coupling relationships."
}