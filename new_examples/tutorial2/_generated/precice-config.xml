<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration>
	<log>
    <sink
      filter="%Severity% > debug"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />
  </log>

  <data:scalar name="Color" />

  <mesh name="Generator-Left-Mesh" dimensions="2">
    <use-data name="Color" />
  </mesh>
  <mesh name="Propagator-Generator-Left-Mesh" dimensions="2">
    <use-data name="Color" />
  </mesh>
  <mesh name="Generator-Right-Mesh" dimensions="2">
    <use-data name="Color" />
  </mesh>
  <mesh name="Propagator-Generator-Right-Mesh" dimensions="2">
    <use-data name="Color" />
  </mesh>

  <participant name="Generator-Left">
    <provide-mesh name="Generator-Left-Mesh" />
    <write-data name="Color" mesh="Generator-Left-Mesh" />
  </participant>
  <participant name="Generator-Right">
    <provide-mesh name="Generator-Right-Mesh" />
    <write-data name="Color" mesh="Generator-Right-Mesh" />
  </participant>
  <participant name="Propagator">
    <provide-mesh name="Propagator-Generator-Left-Mesh" />
    <provide-mesh name="Propagator-Generator-Right-Mesh" />
    <receive-mesh name="Generator-Left-Mesh" from="Generator-Left" />
    <receive-mesh name="Generator-Right-Mesh" from="Generator-Right" />
    <read-data name="Color" mesh="Propagator-Generator-Left-Mesh" />
    <read-data name="Color" mesh="Propagator-Generator-Right-Mesh" />
    <mapping:nearest-neighbor
    direction="read"
    from="Generator-Left-Mesh"
    to="Propagator-Generator-Left-Mesh"
    constraint="consistent"
  />
    <mapping:nearest-neighbor
    direction="read"
    from="Generator-Right-Mesh"
    to="Propagator-Generator-Right-Mesh"
    constraint="consistent"
  />
  </participant>

  <m2n:sockets acceptor="Generator-Left" connector="Propagator" exchange-directory=".."/>
  <m2n:sockets acceptor="Generator-Right" connector="Propagator" exchange-directory=".."/>

  <coupling-scheme:parallel-explicit>
    <participants first="Generator-Left" second="Propagator" />
    <max-time-windows value="10" />
    <time-window-size value="0.1" />
    <exchange data="Color" mesh="Generator-Left-Mesh" from="Generator-Left" to="Propagator" />
  </coupling-scheme:parallel-explicit>
  <coupling-scheme:parallel-explicit>
    <participants first="Generator-Right" second="Propagator" />
    <max-time-windows value="10" />
    <time-window-size value="0.1" />
    <exchange data="Color" mesh="Generator-Right-Mesh" from="Generator-Right" to="Propagator" />
  </coupling-scheme:parallel-explicit>

</precice-configuration>